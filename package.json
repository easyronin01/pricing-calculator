{
  "name": "operations-calculator",
  "version": "3.0.0",
  "description": "Pricing Strategy for Operations",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.gianni.operationscalculator",
    "productName": "Operations Calculator",
    "executableName": "OperationsCalculator",
    "compression": "maximum",
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Operations Calculator",
      "allowElevation": true
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  }
}