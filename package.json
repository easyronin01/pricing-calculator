{
  "name": "pricing-calculator",
  "version": "2.0.0",
  "description": "Executive Decision Matrix for Pricing Strategy",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.gianni.pricingcalculator",
    "productName": "Pricing Strategy Matrix",
    "compression": "maximum",
    "asar": true,
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Pricing Strategy Matrix"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  }
}